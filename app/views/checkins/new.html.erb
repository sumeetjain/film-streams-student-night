<style type="text/css">
  .checkin-header{
    margin-top: 30px;
    text-align: center;
  }
  .checkin-header img{
    width: 200px;
  }
</style>

<div class="container checkin-header">
  <%= image_tag("#{event_logo(@event)}", class: "checkin-theater-logo") %>
</div>

<div class="container">
  <hr>
  <!-- <h2 class="text-center" >Hello! Let's get you checked in.</h2> -->

  <h2 class="text-center" style="margin-top: 45px;">Hello!</h2>
  <h4 class="text-center" style="margin-bottom: 45px;">Let's get you checked in.</h4>

  <div class="row">
    <div class="col-md-6 col-md-offset-3">

       <%= form_for([@event, @checkin]) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Please enter your email address." %>
          <%= f.text_field :email, class: 'form-control', :autocomplete => "off", :spellcheck=>"false" %>
        </div>

        <div class="form-group">
          <%= f.label :email_confirmation, "Type in your email once more, to confirm." %>
          <%= f.text_field :email_confirmation, class: "form-control", :autocomplete => "off", :spellcheck=>"false" %>
        </div>

        <div class="row">
          <%= f.submit "Check-In", class: "btn custom-btn col-xs-4 col-xs-offset-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $(function() {
    setTimeout(function(){
      $('.disappear_name').slideUp(500);
    }, 2000);
  });
</script>